<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvUserNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:layout_below="@id/tvUserNameLabel"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvCommentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textSize="16sp"
        android:layout_below="@id/etUserName" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your comment"
        android:layout_below="@id/tvCommentLabel"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/etComment" />

    <TextView
        android:id="@+id/tvSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="16sp"
        android:layout_below="@id/btnSubmit"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etSearchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by text"
        android:layout_below="@id/tvSearchLabel"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etSearchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by date (yyyy-mm-dd)"
        android:layout_below="@id/etSearchText"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@id/etSearchDate" />

    <TextView
        android:id="@+id/tvEntries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSearch"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#E0E0E0" />

</RelativeLayout>
